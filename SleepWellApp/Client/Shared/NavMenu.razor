<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a style="color:white;font-size: 30px;" class="navbar-brand" href="">SleepWellApp</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <MudIcon Icon="@Icons.Material.Outlined.VideoLibrary" Size="Size.Large" />&emsp;Home
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <MudNavGroup Style="color: #d7d7d7" Title="Journal" Icon="@Icons.Material.Outlined.MenuBook" IconColor="Color.Inherit" Size="Size.Large">
                <MudNavLink Icon="@Icons.Material.Outlined.Create" IconColor="Color.Inherit" Href="/journal">Add Journal </MudNavLink>
                <MudNavLink Icon="@Icons.Material.Outlined.RemoveRedEye" IconColor="Color.Inherit" Href="/viewjournal">View Journals</MudNavLink>
            </MudNavGroup>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="likedaudio">
                <MudIcon Icon="@Icons.Material.Outlined.FavoriteBorder" Size="Size.Large" />&emsp;Liked Audio
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="admin">
                <MudIcon Icon="@Icons.Material.Outlined.AdminPanelSettings" Size="Size.Large" />&emsp;Admin
            </NavLink>
        </div>
        <div class="footer">
            <a href=""><img src="images/Logo.png" style="position: fixed; bottom: 10px; left:20px; width:200px; height: auto" /></a>
            <p style="position: fixed; bottom: 5px; left:60px; color:white">Established 2023</p>
        </div>
    </nav>
</div>


@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
