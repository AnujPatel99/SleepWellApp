<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a style="color:white;font-size: 20px;" class="navbar-brand" href="">SleepWellApp</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <MudIcon Icon="@Icons.Material.Outlined.VideoLibrary" Size="Size.Large" />&emsp;Home
            </NavLink>
        </div>
        <div class="nav-item px-3">
            @*<NavLink class="nav-link" href="journal">
                <MudIcon Icon="@Icons.Material.Outlined.MenuBook" Size="Size.Large" />&emsp;Journal
            </NavLink>*@

            <MudNavGroup Title="Journal" Icon ="@Icons.Material.Outlined.MenuBook" Size="Size.Large">
               
            <MudNavLink Icon = "@Icons.Material.Outlined.Create" Href="/journal">Add Journal </MudNavLink>
            <MudNavLink Icon = "@Icons.Material.Outlined.RemoveRedEye" Href="/viewjournal">View Journals</MudNavLink>
             </MudNavGroup>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="likedaudio">
                <MudIcon Icon="@Icons.Material.Outlined.FavoriteBorder" Size="Size.Large" />&emsp;Liked Audio
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="admin">
                <MudIcon Icon="@Icons.Material.Outlined.AdminPanelSettings" Size="Size.Large" />&emsp;Admin
            </NavLink>
        </div>
    </nav>
</div>
<div class = "footer">
    <a href=""><img src= "images/Logo.png" style = "position: fixed; bottom: 10px; left:20px; width:200px; height: auto" /></a>
    <p  style = "position: fixed; bottom: 5px; left:60px; color:white">Established 2023</p>
</div>

@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
