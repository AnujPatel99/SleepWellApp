    <MudItem xs="12" sm="6" md="4">
        <MudCard>
            <MudCardHeader>
                <CardHeaderAvatar>
                    <MudIconButton Icon="@Icons.Material.Filled.LibraryMusic" Color="Color.Default" Size="Size.Large"></MudIconButton>
                </CardHeaderAvatar>
                <CardHeaderContent>
                    <MudText Typo="Typo.body1">Grandma</MudText>
                    <MudText Typo="Typo.body2">Easter Egg</MudText>
                </CardHeaderContent>
                <CardHeaderActions>
                    <MudIconButton Icon="@Icons.Material.Filled.DarkMode" OnClick="OpenOverlay" Color="Color.Default" />
                </CardHeaderActions>
            </MudCardHeader>
            <MudCardMedia Image="images/grandma.jpg" Height="250" />
            <MudCardContent>
                <MudText Typo="Typo.body2">"Grandma has something for you!!!"</MudText>
            </MudCardContent>
            <MudCardActions>
                <audio controls src="audio/9mm-pistol-shot-6349.mp3"></audio>
            </MudCardActions>
        </MudCard>
    </MudItem>
}
