<MudItem xs="12" sm="6" md="4">
    <MudCard Elevation="3" Outlined="true">
        <MudCardHeader>
            <CardHeaderAvatar>
                <MudIconButton Icon="@Icons.Material.Filled.LibraryMusic" Color="Color.Default" OnClick="ShowGrandma" Size="Size.Large"></MudIconButton>
            </CardHeaderAvatar>
            <CardHeaderContent>
                <MudText Typo="Typo.body1">@audioTitle</MudText>
                <MudText Typo="Typo.body2">SleepWell Library</MudText>
            </CardHeaderContent>
            <CardHeaderActions>
                <MudIconButton Icon="@Icons.Material.Filled.DarkMode" OnClick="OpenOverlay" Color="Color.Default" />
            </CardHeaderActions>
        </MudCardHeader>
        <MudCardMedia Image=@audioImage Height="250" />
        <MudCardContent>
            <MudText Typo="Typo.body2">@audioDesc</MudText>
        </MudCardContent>
        <MudCardActions>
            <audio id="audio @audioID" controls loop src=@audioLink></audio>
            <MudToggleIconButton Toggled="@Liked" ToggledChanged="ButtonOnClick" Class="ml-10" Icon="@Icons.Material.Filled.Favorite" Color="Color.Primary" Title="Unliked"
                                 ToggledIcon="@Icons.Material.Filled.Favorite" ToggledColor="@Color.Secondary" ToggledTitle="Liked" />
        </MudCardActions>


         
        <div style="margin-bottom: 10px">
            <MudSelect T="string" Label="Duration" ValueChanged="OnDurationChanged" AnchorOrigin="Origin.BottomCenter">
                <MudSelectItem Value="@("30 Minutes")" />
                <MudSelectItem Value="@("1 Hour")" />
                <MudSelectItem Value="@("2 Hours")" />
            </MudSelect>
        </div>
    </MudCard>
</MudItem>
    @if (timesTapped > 10)
