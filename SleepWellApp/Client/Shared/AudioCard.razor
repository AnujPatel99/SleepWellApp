<MudItem xs="12" sm="6" md="4">
    <MudCard>
        <MudCardHeader>
            <CardHeaderAvatar>
                <MudIconButton Icon="@Icons.Material.Filled.LibraryMusic" Color="Color.Default" Size="Size.Large"></MudIconButton>
            </CardHeaderAvatar>
            <CardHeaderContent>
                <MudText Typo="Typo.body1">@audioTitle</MudText>
                <MudText Typo="Typo.body2">SleepWell Library</MudText>
            </CardHeaderContent>
            <CardHeaderActions>
                <MudIconButton Icon="@Icons.Material.Filled.DarkMode" OnClick="OpenOverlay" Color="Color.Default" />
                
            </CardHeaderActions>
        </MudCardHeader>
        <MudCardMedia Image=@audioImage Height="250" />
        <MudCardContent>
            <MudText Typo="Typo.body2">@audioDesc</MudText>
        </MudCardContent>
        <MudCardActions>
            <audio controls src=@audioLink></audio>
            <MudToggleIconButton  @bind-Toggled="@Liked" Class="ml-10" Icon="@Icons.Material.Filled.Favorite" Color="Color.Default" Title = "Unliked"
                                                                ToggledIcon="@Icons.Material.Filled.Favorite" ToggledColor="@Color.Secondary" ToggledTitle="Liked"/>
        </MudCardActions>
    </MudCard>
</MudItem>
<MudOverlay @bind-Visible="isVisible" DarkBackground="true" AutoClose="true"/>
        @code {

    [Parameter]
    public int audioID { get; set; } // ID
    [Parameter]
    public string? audioTitle { get; set; } // Title
    [Parameter]
    public string? audioImage { get; set; } // Image
    [Parameter]
    public string? audioDesc { get; set; } // Description
    [Parameter]
    public string? audioLink { get; set; } // Direct link to audio file
    @code {
    public bool Liked { get; set; }

    private bool isVisible;

    public void OpenOverlay()
    {
        isVisible = true;
        StateHasChanged();
    }
}

}